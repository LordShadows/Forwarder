                                <GridView>
                                    <GridViewColumn Header="№" Width="40" DisplayMemberBinding="{Binding Number}" />
                                    <GridViewColumn Header="Город/Страна" Width="180" DisplayMemberBinding="{Binding Address}" />
                                    <GridViewColumn Header="Номер заявки" Width="110" DisplayMemberBinding="{Binding Request}" />
                                    <GridViewColumn Header="Планируемая дата прибытия" Width="190" DisplayMemberBinding="{Binding Date}" />
                                    <GridViewColumn Header="ID" Width="0" DisplayMemberBinding="{Binding ID}" />
                                </GridView>
                            </ListView.View>
                            <Button/>
                        </ListView>
                        <Button x:Name="bDestinationUp" Style="{StaticResource ButtonStyle}" Grid.Column="1" HorizontalAlignment="Right" Margin="0,33,10,0" Grid.Row="1" VerticalAlignment="Top" Width="30" Height="37" Cursor="Hand" Click="BDestinationUp_Click">
                            <Image Height="20" Width="20" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top" Source="Resources/up.png" Stretch="Fill"/>
                        </Button>
                        <Button x:Name="bDestinationDown" Style="{StaticResource ButtonStyle}" Grid.Column="1" HorizontalAlignment="Right" Margin="0,78,10,0" Grid.Row="1" VerticalAlignment="Top" Width="30" Height="37" Cursor="Hand" Click="BDestinationDown_Click">
                            <Image Height="20" Width="20" Margin="0,1,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Source="Resources/down.png" Stretch="Fill"/>
                        </Button>
                        <Label Content="Пункты назначения:" Grid.Column="1" HorizontalAlignment="Left" Margin="20,5,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="122"/>
                        <GroupBox Grid.Column="1" Header="Коррекция данных маршрута" Height="207" Margin="20,38,7,0" VerticalAlignment="Top">
