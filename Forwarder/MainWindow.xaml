                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Номер" Width="100" DisplayMemberBinding="{Binding Number}" />
                                    <GridViewColumn Header="Статус" Width="100" DisplayMemberBinding="{Binding Status}" />
                                    <GridViewColumn Header="ID" Width="0" DisplayMemberBinding="{Binding ID}" />
                                </GridView>
                            </ListView.View>
                            <Button/>
                        </ListView>
                        <Line Fill="#FFB0B0B0" Stroke="#FFB0B0B0" Grid.Column="1" Margin="10,47,0,10" Y2="1000" HorizontalAlignment="Left" Width="2" Grid.RowSpan="3"/>
                        <ListView x:Name="lvDestinations" Style="{StaticResource ListViewStyle}" Margin="24,33,54,0" BorderBrush="#FFB0B0B0" SelectionChanged="LVDestinations_SelectionChanged" Grid.Column="1" Grid.Row="1">
